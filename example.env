# Cloudflare R2 Configuration
# Copy this file to .env.local and fill in your values

# Server-side variables (used in API routes)
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_PHOTOS_BUCKET=photos
R2_MODELS_BUCKET=models-glb
R2_PUBLIC_URL=your_r2_public_url_here  # e.g., abc123.r2.cloudflarestorage.com

# Client-side variables (prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_R2_ACCOUNT_ID=your_account_id_here
NEXT_PUBLIC_R2_PHOTOS_BUCKET=photos
NEXT_PUBLIC_R2_MODELS_BUCKET=models-glb
NEXT_PUBLIC_R2_PUBLIC_URL=your_r2_public_url_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
